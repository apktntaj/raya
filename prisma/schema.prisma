generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Milk {
  id         Int      @id @default(autoincrement())
  type       MilkType
  madeAt     DateTime
  expiredAt  DateTime
  madeAmount Int
  leftAmount Int
  amont      Int
  desc       String?
}

enum MilkType {
  ASI
  SUFOR
}

model Sleep {
  id       Int      @id @default(autoincrement())
  startAt  DateTime
  endAt    DateTime
  duration Int
  desc     String?
}

model Diaper {
  id     Int        @id @default(autoincrement())
  type   DiaperType
  madeAt DateTime
  total  Int
  desc   String?
}

enum DiaperType {
  PUP
  POO
}
